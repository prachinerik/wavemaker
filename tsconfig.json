{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "noEmit": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        //"extendedDiagnostics": true,
        // "traceResolution": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}